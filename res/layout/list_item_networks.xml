<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/item_margin_bottom"
    android:weightSum="1" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/layout_net_name"
        android:id="@+id/txtNetName"
        android:layout_gravity="left"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_big"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_left"
        android:layout_marginTop="@dimen/item_margin_top" />

    <TextView
        android:text="@string/layout_net_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNetName"
        android:id="@+id/txtNetDescription"
        android:layout_alignLeft="@+id/txtNetName"
        android:layout_alignStart="@+id/txtNetName"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/layout_net_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNetSecurityTitle"
        android:layout_below="@+id/txtNetDescription"
        android:layout_alignLeft="@+id/txtNetName"
        android:layout_alignStart="@+id/txtNetName" />

    <TextView
        android:text="@string/layout_net_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNetDescription"
        android:layout_toRightOf="@+id/txtNetSecurityTitle"
        android:id="@+id/txtNetSecurity" />

    <TextView
        android:text="@string/layout_net_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNetStatusTitle"
        android:layout_below="@+id/txtNetSecurityTitle"
        android:layout_alignLeft="@+id/txtNetName"
        android:layout_alignStart="@+id/txtNetName" />

    <TextView
        android:text="@string/layout_net_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNetSecurity"
        android:layout_toRightOf="@+id/txtNetStatusTitle"
        android:id="@+id/txtNetStatus"
        android:layout_marginBottom="@dimen/item_margin_bottom" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_marginEnd="@dimen/item_margin_right"
        android:id="@+id/imgLockerCfg"
        android:layout_alignBottom="@+id/txtNetStatus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/item_margin_bottom" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_marginEnd="@dimen/item_margin_right"
        android:id="@+id/imgWiFiOk"
        android:layout_alignBottom="@+id/txtNetStatus"
        android:layout_toLeftOf="@+id/imgLockerCfg"
        android:layout_toStartOf="@+id/imgLockerCfg"
        android:layout_marginBottom="@dimen/item_margin_bottom" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_marginEnd="@dimen/item_margin_right"
        android:id="@+id/imgHidden"
        android:layout_alignBottom="@+id/txtNetStatus"
        android:layout_toLeftOf="@+id/imgWiFiOk"
        android:layout_toStartOf="@+id/imgWiFiOk"
        android:layout_marginBottom="@dimen/item_margin_bottom" />


</RelativeLayout>