<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scan_networks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.apps.mohb.wifiauthority.ScanNetworksActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scanTitle"
        android:text="@string/activity_title_networks"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/title_margin_bottom"
        android:paddingLeft="@dimen/title_margin_left"
        android:paddingRight="@dimen/title_margin_right"
        android:paddingTop="@dimen/title_margin_top"
        android:elevation="@dimen/title_elevation"
        android:background="@drawable/title_card" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scanList"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_right"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/item_spacing" />

</FrameLayout>
